@using WeatherApp.Shared.Models
@using WeatherApp.Shared.OpenWeatherAPIParser;


<div class="container">
	<h3>1-Hour Forecast</h3>
	<div class="d-flex flex-column w-100 border border-2 border-primary rounded-2 my-3">
		@if (Forecast != null)
		{
			<table class="table table-hover">
			
				<tr class="bg-primary text-white">
					<th class="">Time</th>
					<th>Precipitation</th>
				</tr>
				@foreach (var minute in Forecast)
				{
					<tbody>
						<tr>
							<td>@(DateTimeOffset.FromUnixTimeSeconds(minute.Dt).DateTime)</td>
							<td>@(minute.Precipitation) mm/h</td>
						</tr>
					</tbody>
				}
			</table>

		}
	</div>
</div>

@code {
	[Parameter]
	[EditorRequired]
	public ForecastMinutely[]? Forecast { get; set; }
}